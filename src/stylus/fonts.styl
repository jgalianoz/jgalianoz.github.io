@font-face
    font-family 'icomoon'
    src url('../fonts/icomoon.eot?s59fa7')
    src url('../fonts/icomoon.eot?s59fa7#iefix') format('embedded-opentype'),
    url('../fonts/icomoon.ttf?s59fa7') format('truetype'),
    url('../fonts/icomoon.woff?s59fa7') format('woff'),
    url('../fonts/icomoon.svg?s59fa7#icomoon') format('svg')
    font-weight normal
    font-style normal

[class^="icon-"], [class*=" icon-"]
    font-family 'icomoon' !important
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.icon-twitter
    &:before
        content "\e900"
        color #55acee

.icon-facebook
    &:before
        content "\e901"
        color #3b5998
        
.icon-instagram
    &:before
        content "\ea92"

.icon-github
    &:before
        content "\eab0"
        color #FFF

.icon-linkedin
    &:before
        content "\eac9"
        color #0276b8


.icon-twitter
.icon-facebook
.icon-instagram
.icon-github
.icon-linkedin
  font-size 30px
